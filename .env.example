# RSS-RAG 环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 基础配置
RSS_RAG_BASE_DIR=data/rag_db
RSS_RAG_DEVICE=cuda

# LLM配置
RSS_RAG_LLM_TYPE=deepseek
RSS_RAG_SYSTEM_PROMPT=你是一个专注于科技和人工智能领域的AI助手，擅长回答相关问题。

# API密钥配置
RSS_RAG_DEEPSEEK_API_KEY=your_deepseek_api_key_here
RSS_RAG_OPENAI_API_KEY=your_openai_api_key_here

# 检索配置
RSS_RAG_TOP_K=5
RSS_RAG_USE_RERANKER=true
RSS_RAG_USE_QUERY_ENHANCEMENT=true

# 缓存配置
RSS_RAG_USE_CACHE=true
RSS_RAG_CACHE_SIZE=2000
RSS_RAG_CACHE_TTL=7200

# RSS特定配置
RSS_RAG_MAX_HISTORY_DAYS=60
RSS_RAG_UPDATE_INTERVAL=1800 